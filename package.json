{
	"name": "tangrid-workspace",
	"version": "0.1.0",
	"description": "Angular component library",
	"keywords": [
		"angular",
		"table",
		"datagrid",
		"tanstack",
		"tanstack-table",
		"angular-table",
		"virtual-scrolling",
		"pagination",
		"sorting",
		"filtering",
		"component-library",
		"typescript",
		"web-components",
		"ui-library",
		"enterprise",
		"material-design"
	],
	"author": "infinity2zero",
	"engines": {
		"node": ">=18.0.0",
		"npm": "Please use Yarn to install dependencies"
	},
	"scripts": {
		"prepare": "is-ci || husky install .husky",
		"build": "yarn tangrid:build && yarn demo:build",
		"test": "yarn tangrid:lint && yarn tangrid:test",
		"tdd": "yarn tangrid:tdd",
		"e2e": "yarn e2e-app:lint && yarn tangrid:e2e && yarn demo:e2e",
		"demo": "yarn demo:serve",
		"ssr": "yarn ssr-app:lint && yarn ssr-app:build && yarn ssr-app:e2e",
		"changelog": "conventional-changelog --preset angular --infile CHANGELOG.md --same-file --release-count 1",
		"check-format": "prettier -c .",
		"format": "prettier -w .",
		"e2e-app:serve": "ng serve e2e-app",
		"e2e-app:lint": "ng lint e2e-app",
		"tangrid:lint": "ng lint tangrid",
		"tangrid:test": "ng test -c other-browsers --watch=false && ng test -c zone-other-browsers --watch=false && ng test -c zone --watch=false && ng test tangrid --coverage --watch=false",
		"tangrid:tdd": "ng test tangrid",
		"tangrid:e2e": "playwright test -c e2e-app",
		"tangrid:build": "ng build tangrid -c production && node scripts/build-themes.js && node scripts/slim-package.js && cp README.md dist/tangrid/ && cp LICENSE dist/tangrid/ && find dist/tangrid -name '*.map' -delete",
		"tangrid:watch": "ng build tangrid -c development --watch",
		"demo:serve": "ng serve demo",
		"demo:lint": "ng lint demo",
		"demo:build": "yarn demo:lint && ng build demo",
		"demo:e2e": "playwright test -c demo",
		"ssr-app:lint": "ng lint ssr-app",
		"ssr-app:serve": "ng serve ssr-app",
		"ssr-app:build": "ng build ssr-app",
		"ssr-app:e2e": "playwright test -c ssr-app",
		"test-app:serve": "ng serve test-app",
		"test-app:build": "ng build test-app",
		"schematics:build": "rollup --failAfterWarnings -c schematics/rollup.config.js",
		"schematics:tdd": "node --import tsx --test --watch \"schematics/**/*.spec.ts\"",
		"schematics:test": "node --import tsx --test \"schematics/**/*.spec.ts\"",
		"ci": "yarn check-format && yarn test && yarn e2e && yarn build -c ci && yarn ssr",
		"prepare-release": "yarn changelog && git add CHANGELOG.md && yarn build",
		"deploy:demo": "ng build demo --base-href=/tanGrid/ && npx angular-cli-ghpages --dir=demo/dist/browser"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/infinity2zero/tanGrid.git"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/infinity2zero/tanGrid/issues"
	},
	"homepage": "https://github.com/infinity2zero/tanGrid#readme",
	"dependencies": {
		"@stackblitz/sdk": "^1.11.0",
		"@tanstack/angular-virtual": "^4.0.6",
		"sortablejs": "^1.15.6",
		"tslib": "^2.3.0"
	},
	"peerDependencies": {
		"@angular/common": "^18.0.0 || ^19.0.0 || ^20.0.0",
		"@angular/core": "^18.0.0 || ^19.0.0 || ^20.0.0",
		"@angular/forms": "^18.0.0 || ^19.0.0 || ^20.0.0",
		"@angular/localize": "^18.0.0 || ^19.0.0 || ^20.0.0",
		"@popperjs/core": "^2.11.8",
		"@tanstack/angular-table": "^8.0.0",
		"rxjs": "^6.5.3 || ^7.4.0"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "~18.0.0",
		"@angular-devkit/core": "~18.0.0",
		"@angular-devkit/schematics": "~18.0.0",
		"@angular-eslint/builder": "^18.0.0",
		"@angular-eslint/eslint-plugin": "^18.0.0",
		"@angular-eslint/eslint-plugin-template": "^18.0.0",
		"@angular-eslint/schematics": "^18.0.0",
		"@angular-eslint/template-parser": "^18.0.0",
		"@angular/animations": "~18.0.0",
		"@angular/build": "^18.0.0",
		"@angular/cdk": "~18.0.0",
		"@angular/cli": "~18.0.0",
		"@angular/common": "~18.0.0",
		"@angular/compiler": "~18.0.0",
		"@angular/compiler-cli": "~18.0.0",
		"@angular/core": "~18.0.0",
		"@angular/forms": "~18.0.0",
		"@angular/localize": "~18.0.0",
		"@angular/platform-browser": "~18.0.0",
		"@angular/platform-browser-dynamic": "~18.0.0",
		"@angular/platform-server": "~18.0.0",
		"@angular/router": "~18.0.0",
		"@angular/ssr": "~18.0.0",
		"@axe-core/playwright": "^4.8.1",
		"@commitlint/cli": "12.1.4",
		"@commitlint/config-angular": "12.1.4",
		"@playwright/test": "^1.39.0",
		"@popperjs/core": "2.11.8",
		"@rollup/plugin-replace": "^5.0.4",
		"@rollup/plugin-typescript": "^11.1.5",
		"@schematics/angular": "~18.0.0",
		"@tanstack/angular-table": "^8.0.0",
		"@types/express": "^4.17.17",
		"@types/fs-extra": "^9.0.3",
		"@types/glob": "^7.1.1",
		"@types/node": "^22.10.1",
		"@types/sortablejs": "^1.15.9",
		"@typescript-eslint/eslint-plugin": "^7.2.0",
		"@typescript-eslint/parser": "^7.2.0",
		"@typescript-eslint/utils": "^7.2.0",
		"@vitest/browser-playwright": "^4.0.14",
		"@vitest/coverage-v8": "^4.0.15",
		"@vitest/ui": "^4.0.14",
		"angular-cli-ghpages": "^3.0.2",
		"conventional-changelog-cli": "^2.0.12",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-deprecation": "^2.0.0",
		"eslint-plugin-playwright": "^0.18.0",
		"eslint-plugin-unused-imports": "^3.2.0",
		"express": "^4.18.2",
		"fs-extra": "^9.0.1",
		"glob": "^7.1.1",
		"husky": "^7.0.4",
		"is-ci": "^3.0.1",
		"lint-staged": "^15.1.0",
		"ng-packagr": "~18.0.0",
		"playwright-core": "^1.39.0",
		"prettier": "3.1.0",
		"rollup": "^4.1.4",
		"rxjs": "~7.8.0",
		"ts-node": "^10.9.1",
		"tsx": "^4.20.6",
		"typescript": "~5.4.0",
		"vitest": "^4.0.14",
		"zone.js": "~0.15.0"
	},
	"lint-staged": {
		"*.{js,ts,css,scss,html,md}": "prettier --write"
	}
}
